{
  "name": "GitHub reactions minimap",
  "version": "0.2.0.0",
  "description": "Displays reactions as red/green marks in the scrollbar",

  "homepage_url": "https://github.com/chrismwendt/github-reactions-minimap",

  "icons": {
    "128": "icon.png"
  },

  "content_scripts": [{
    "js": [ "jquery.min.js", "main.js" ],
    "matches": [ "*://github.com/*" ],
    "run_at": "document_end"
  }],

  "permissions": [ "activeTab" ],

  "manifest_version": 2
}
